<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/material_16dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/material_8dp">

        <TextView
            android:id="@+id/tv_coin_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="sans-serif-condensed-medium"
            android:hint="Bitcoin"
            android:textColor="@color/black"
            android:textSize="@dimen/material_24dp" />

        <ImageButton
            android:id="@+id/ib_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/material_8dp"
            android:background="@null"
            android:src="@drawable/ic_favorite_unselected" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_coin_symbol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="(eth)"
        android:textAlignment="center" />

    <LinearLayout
        android:id="@+id/rootCurrentPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/material_16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/material_8dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Current Price:"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_current_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/material_8dp"
            android:text="32" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rootHashingAlgorithms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/material_8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/material_8dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Hashing Algorithm:"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_hashing_algorithm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/material_8dp"
            android:text="Male" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/material_8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/material_8dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Price change percentage over the last 24 hours:"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_percentage_last_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/material_8dp"
            android:text="Planet" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rootDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/material_8dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/material_8dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Description:"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/material_8dp"
            android:text="" />

    </LinearLayout>

</LinearLayout>
